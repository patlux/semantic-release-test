{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "pretty": true,
    "lib": ["esnext"],
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "outDir": "dist",
    "declaration": true
  },
  "include": ["src/"]
}
